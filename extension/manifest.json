{
  "manifest_version": 3,
  "name": "Fresh News",
  "version": "0.01",
  "description": "Your extension description here",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "file.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "host_permissions": [
    "*://*/*" 
  ],
  "web_accessible_resources": [
    {
      "resources": ["file.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
